@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h2>No animals availible &#9829</h2>
}

<ul>
  @foreach(Animal animal in Model)
  {
      <li>@Html.ActionLink($"{animal.Name}", "Show", new { id = animal.AnimalId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Animal", "Create")</p>